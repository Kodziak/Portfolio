{
  "root": true,
  "env": {
    "commonjs": true,
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:vue/essential", "airbnb-base", "eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "no-console": "off",
    "quotes": ["error", "single"]
  }
}
