{
  "root": true,
  "env": {
    "commonjs": true,
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:vue/essential", "airbnb-base", "eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "quotes": ["error", "single"],
    "no-console": "off",
    "no-await-in-loop": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-var-requires": "off",
    "strict": "off",
    "global-require": "off",
    "max-len": [
      "warn",
      {
        "code": 150
      }
    ],
    "lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ]
  }
}
